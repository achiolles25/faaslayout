<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Application">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:weightSum="3"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/form"
                android:text="Log Out"
                android:id="@+id/btn_logout"
                android:textColor="@color/blackColor"/>
            <Space
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_assessor"
                android:text="Assessor"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/logo"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_assessor">
            <LinearLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Value Computation"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Building Core"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:paddingLeft="35dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/Core_SubTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/editform"
                    android:hint="Sub Total"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/Core_DepRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/editform"
                    android:hint="Depretaion Rate"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/Core_AccDep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/editform"
                    android:hint="Accumulated Depreciation"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:textSize="25sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Items"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:paddingLeft="35dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/Addi_SubTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/editform"
                    android:hint="Sub Total"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/Addi_Adjustment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/editform"
                    android:hint="Adjustments"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/Addi_Total"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/editform"
                    android:hint="Total"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:textSize="25sp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:background="@drawable/form"
                    android:layout_gravity="end"
                    android:id="@+id/btn_next"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="25dp"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>





</ScrollView>