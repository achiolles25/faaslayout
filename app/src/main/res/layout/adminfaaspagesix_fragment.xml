<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="STRUCTURE CHARACTERISTICS"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Constructed"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:paddingLeft="35dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/dateconstructed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/editform"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:textSize="25sp"
        android:hint="Date Constructed"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Completed"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:paddingLeft="35dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/datecompleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/editform"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:textSize="25sp"
        android:hint="Date Completed"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Occupied"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:paddingLeft="35dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/dateoccupied"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/editform"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:textSize="25sp"
        android:hint="Date Occupied"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Area of Ground Floor"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:paddingLeft="35dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/areaofgroundfloor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/editform"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:textSize="25sp"
        android:hint="Area of Ground Floor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Bldg Area"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:paddingLeft="35dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/totalbuildingarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/editform"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:textSize="25sp"
        android:hint="Total Building Area"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/form"
        android:layout_gravity="end"
        android:id="@+id/btn_submitFinal"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>